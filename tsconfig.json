{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "esnext",
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": true,
    "lib": ["es6", "dom"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
